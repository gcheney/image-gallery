<!DOCTYPE html>
<html>

    <% include ../partials/head %>
    
<body>
	<% include ../partials/navbar %>

    <div class="container">
        <div class="jumbotron">
            <h1><i class="fa fa-camera-retro" aria-hidden="true"></i></span> The Image Gallery</h1>
            <p>A bunch of links to beautiful images</p> 
            <p><a class="btn btn-primary btn-large" href="/image/new">Add a New Image To The Collection</a></p>
        </div>

        <div class="row">
            <% images.forEach(function(image) { %>
                <% if (image.isPublic === true) { %>
                  <div class="col-md-4 col-sm-6">
                    <div class="thumbnail">
                        <div class="image-wrap">
                            <a href="/image/view">
                                <img class="image" src="<%= image.url %>">
                            </a>
                            <div class="image-overlay">
                                <h3 class="overlay-content">
                                    <i class="fa fa-comment" aria-hidden="true"></i> 27
                                    &nbsp;
                                    <i class="fa fa-heart" aria-hidden="true"></i> 12
                                </h3>
                            </div>
                        </div>
                        <span class="image-details"><a href="/image/view"><%= image.title %></a><%= image.lead %></span>
                    </div>
                  </div>
                <% } %> 
            <% }); %>
        </div>
    </div>
    
    <% include ../partials/footer %>
    <% include ../partials/scripts %>
</body>
</html>

